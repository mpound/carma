#---------------------------
# Info for Log processing
#---------------------------
# Log files to keep tabs on and process for syslog2Db (exclude debug logs)
logFileFIFOs = /var/carma/log/alert.pipe,/var/carma/log/carma.pipe,/var/carma/log/control.pipe,/var/carma/log/environment.pipe,/var/carma/log/interferometry.pipe,/var/carma/log/monitor.pipe,/var/carma/log/receivers.pipe

#logFileList = /tmp/test.sock
#logFileFIFO = /var/carma/log/syslog.pipe

dbSyslogMMAPFileName=/dev/shm/syslogmmap

# All log files, including debug logs.
#fullLogFileList = /var/carma/log/carma.debug
#fullLogFileList = /var/carma/log/alert.log,/var/carma/log/carma.log,/var/carma/log/control.log,/var/carma/log/environment.log,/var/carma/log/interferometry.log,/var/carma/log/monitor.log,/var/carma/log/receivers.log,/var/carma/log/carma.debug,/var/carma/log/control.debug,/var/carma/log/environment.debug,/var/carma/log/interferometry.debug,/var/carma/log/monitor.debug,/var/carma/log/receivers.debug

# directory to which syslog2Db will write the log data files
logWriteDir          = ${top}/logData

# basename of processed file for loading.  "."+framecount will be appended
# to this.
logWriteFileBaseName = ${logWriteDir}/syslog.tbl

# index file for subsequent invocations of syslog2Db
logIndex             = ${logWriteDir}/syslog2db.index

# directory where the log data files will be symlinked (where
# logDataLoader will read them)
dbloadLogDir         = ${dbloadDir}/logData
