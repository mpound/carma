<?xml version="1.0"?>

<!-- Include the domain DTD definition. -->
<!DOCTYPE domain SYSTEM "domain.dtd"[
    <!ENTITY BIN_DIR "/opt/rt/bin/">
    <!ENTITY RUN_DIR "/home/control/">
]>

<!-- Local configuration to run all CARMA Wideband Downconverter -->
<!-- applications and support infrastructure on a single machine.-->

<!-- @version -->
<domain>

    <oad hostname="canlab2.ovro.caltech.edu">

        <!-- All things monitor system -->
        <server name="FrameScriberPublisher" 
            path="&BIN_DIR;frameScriberPublisher"
            args="subsystem=Wbdc delay=300 "
            directory="&RUN_DIR;"  />
        
        <server name="WbdcFSP" 
            path="&BIN_DIR;frameScriberPublisher"
            args="subsystem=Wbdc delay=300 "
            directory="&RUN_DIR;"  />
         
       <!-- All things control -->
       <server name="Subarray1" 
            path="&BIN_DIR;/subarrayControl"
            directory="&RUN_DIR;"  
            args="runSAT=true" />
        
        <!-- All things CAN -->
        <server name="RemoteCanServer" 
            path="&BIN_DIR;canOverIpServer"
            directory="&RUN_DIR;" 
            args=""  />
       
        <server name="CarmaWbdcHost" 
            path="&BIN_DIR;carmaWbdcHost"
            args="board=0 canbus=0 "
            directory="&RUN_DIR;"  />
     </oad>
</domain>
    
