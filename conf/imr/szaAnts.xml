<!-- SZA Antennas 
  The FSP delay is set to 350msec rather than the nominal 275msec to give
  headroom in case there is an error on CANbus0. Currently this causes a 
  transmission on CANbus1, which is unpopulated, resulting in an infinite
  loop of errors using enough cpu time to delay the publishing of the
  monitor data.
-->

<oad hostname="c16.carma.pvt" system="sza">
    <server name="Sza1FSP" path="&BIN_DIR;/frameScriberPublisher"
            directory="&DEFAULT_DIR;" 
            args="&LOG; &USE_DB; subsystem=sza1 delay=350" 
            startup-priority="&monitor;" />
    <server name="Sza1Control" path="&BIN_DIR;/szaAntennaControl"
            args="&LOG; antenna=0 logd=/home/control/szalog logf=c16 host=localhost ignorewraplogic=f" />
    <server name="RemoteCanSza1" path="&BIN_DIR;/canOverIpServer"
            directory="&DEFAULT_DIR;"   
            args="&LOG; &USE_DB;  "/>
    <server name="OTsza1" path="&BIN_DIR;/carmaOpticalTel"
                directory="&DEFAULT_DIR;" 
                args="&LOG; &USE_DB; antenna=sza1 awdelay=0.03 emulate=true nice=20" />
</oad>

