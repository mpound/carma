      <enum name="RX3MM" />
      <enum name="RX1CM" />
      <enum name="RXANY" />
      <enum name="MOVING" />
      <enum name="ERROR" >
        <description>
            An error has occurred.  Possible reasons for the error are that
            either the RX selection is stuck or the IF switch is stuck.
            Another possible error is that the current RX is in conflict
            with the current IF switch position.
        </description>
      </enum>
      <errHi>ERROR</errHi>
    </MonitorPoint>

    <MonitorPoint name="rxState" type="enum" persistent="true">
      <shortName>Rx State</shortName>
      <longName>Receiver State</longName>
