      </enum>
      <enum name="BAD">
        <description>
            Receiver tuning has failed for an unknown reason.
        </description>
      </enum>
      <enum name="TUNE">
        <description>
            Receiver tuning is in progress.
        </description>
      </enum>
      <enum name="YIG_BAD">
        <description>YIG is not locked.</description>
      </enum>
      <enum name="GUNN_BAD">
        <description>GUNN not locked.</description>
      </enum>
      <enum name="IFSEL_BAD">
        <description>IF switch selection failed.</description>
      </enum>
      <enum name="RXSEL_BAD">
        <description>RX selection failed.</description>
      </enum>
      <enum name="RX_BAD">
        <description>Front end tuning failed.</description>
      </enum>
      <enum name="TERTIARY_BAD">
        <description>A tertiary is not in the correct position</description>
      </enum>
      <enum name="OPTIMIZE"/>
      <enum name="SEARCH"/>
      <errHi>BAD</errHi>
      <errHi>YIG_BAD</errHi>
      <errHi>GUNN_BAD</errHi>
      <errHi>IFSEL_BAD</errHi>
      <errHi>RXSEL_BAD</errHi>
      <errHi>RX_BAD</errHi>
      <errHi>TERTIARY_BAD</errHi>
      <warnHi>OPTIMIZE</warnHi>
      <warnHi>SEARCH</warnHi>
