<?xml version="1.0"?>
<!DOCTYPE Common SYSTEM "mpml.dtd">

<!-- Monitor points that are common between all antennas -->

<Common scope="global" author="Colby Gutierrez-Kraybill">

<Container name="AntennaCommon" priority="vital">
  <description>
    This container holds monitor points which are common to all
    CARMA antennas.  Its main purpose is to create and present a
    common monitor interface which in turn can be used to control and track
    the array in a homogenous fashion.
  </description>

  <MonitorPoint name="initialized" type="bool" >
    <shortName>initialized</shortName>
    <longName>initialized</longName>
    <description>
        Monitor point intended to be set by antenna and signalled by the control
        system after an antenna has been initialized in a subarray.  This defaults
        to false when an antenna is rebooted or antenna processes are restarted
        indicating that initialization is required by bringing the antenna out
        and back into the subarray.
    </description>
    <errHi>false</errHi>
  </MonitorPoint>

  <Container name="Drive">

    <MonitorPoint name="sourcename" type="string">
        <shortName>Source</shortName>
        <longName>sourcename</longName>
        <description>
           Source name for ra/dec
        </description>
    </MonitorPoint>
    <MonitorPoint name="rightAscension" type="double">
        <shortName>RA</shortName>
        <longName>RightAscension</longName>
        <description>
           Apparent right ascension
        </description>
        <precision>4</precision>
        <units>rad</units>
    </MonitorPoint>
    <MonitorPoint name="declination" type="double">
        <shortName>Dec</shortName>
        <longName>Declination</longName>
        <description>
         Apparent declination
        </description>
        <precision>4</precision>
        <units>rad</units>
    </MonitorPoint>
    <MonitorPoint name="errorSky" type="double">
        <shortName>Sky Err</shortName>
        <longName>ErrorSky</longName>
        <description>
            RMS of tracking error on the sky (as an arc on the sky).
            This is the difference between the requested sky position
            and the position reported by the encoders. This gets mapped
            to the miriad axisrms for both az and el (!).
        </description>
        <precision>1</precision>
        <units>arcsec</units>
    </MonitorPoint>

    <MonitorPoint name="state" type="enum">
      <shortName>Drive State</shortName>
      <longName>Drive State</longName>
      <description>
        Drive system state
      </description>
      <enum name="TRACK">
       <description>
        Tracking - defined as two consecutive servo iterations with
        the errorSky less than the trackTolerance.
        This prevents being in the TRACK state for one iteration while
        the antenna moves through zero during overshoot.
        The same requirement applies when moving from any state to the
        TRACK state, including when coming from CLOSE.
       </description>
      </enum>
      <enum name="CLOSE">
       <description>
        Close to the source - the antenna is no longer slewing but is
        trying to track the source within tolerance. If the antenna is in
        TRACK and then falls outside the tolerance, it will go into this
        state.
       </description>
      </enum>
      <enum name="SLEW">
       <description>
        Slewing - going to a new source or to stow. On some antennas this
        may also be used instead of CLOSE.
       </description>
      </enum>
      <enum name="STOW">
       <description>
         Currently in stow position, defined to be AZ=180, EL=85.
       </description>
      </enum>
      <enum name="SNOW">
       <description>Currently minimizing snow buildup
       </description>
      </enum>
      <enum name="STOP">
       <description>Stopped, drive power off</description>
      </enum>
      <enum name="DISABLE">
       <description>
        Manually disabled at the antenna, or collision detected
       </description>
      </enum>
      <enum name="HWLIMIT">
       <description>Hardware azimuth or elevation limit</description>
      </enum>
      <enum name="SWLIMIT">
       <description>Software azimuth or elevation limit</description>
      </enum>
      <enum name="ERROR">
       <description>Error state (stalled or power problem)</description>
      </enum>
      <enum name="LOCAL">
        <description>
            Antenna is under local control (i.e. handpaddle).
        </description>
      </enum>
      <enum name="SERVICE">
        <description>
            Antenna is in its service (maintenance) position.
        </description>
      </enum>
      <enum name="TEST">
        <description>Drive system is in a test mode.</description>
      </enum>
      <enum name="FATAL">
        <description>A fatal error has been detected.</description>
      </enum>

      <warnHi>SERVICE</warnHi>
      <errHi>ERROR</errHi>
      <errHi>HWLIMIT</errHi>
      <errHi>DISABLE</errHi>
      <errHi>SWLIMIT</errHi>
      <errHi>CLOSE</errHi>
      <errHi>SLEW</errHi>
      <errHi>SNOW</errHi>
      <errHi>LOCAL</errHi>
      <errHi>TEST</errHi>
      <errHi>FATAL</errHi>
    </MonitorPoint>

    <MonitorPoint name="safeState" type="enum" priority="vital">
        <shortName>Safe State</shortName>
        <longName>Safe State</longName>
        <description>Collidability status of the antenna.</description>
        <enum name="SAFE">
            <description>
                Antenna is in a safe position where it can not collide with
                nearby antennas.
            </description>
        </enum>
        <enum name="UNSAFE">
            <description>
                Antenna is in an unsafe position and is in danger of colliding
                with nearby antennas.
            </description>
        </enum>
        <errHi>UNSAFE</errHi>
    </MonitorPoint>

    <MonitorPoint name="safeAzLow" type="float" priority="vital">
      <shortName>Safe Az Low</shortName>
      <longName>Safe Az Low Boundary</longName>
      <description>The lower boundary of the safe range of azimuth
       for collisionable antennas
      </description>
      <units>deg</units>
    </MonitorPoint>

    <MonitorPoint name="safeAzHigh" type="float" priority="vital">
      <shortName>Safe Az High</shortName>
      <longName>Safe Az High Boundary</longName>
      <description>The upper boundary of the safe range of azimuth
       for collisionable antennas
      </description>
      <units>deg</units>
    </MonitorPoint>

    <MonitorPoint name="safeElLow" type="float" priority="vital">
      <shortName>Safe El Low</shortName>
      <longName>Safe El Low Boundary</longName>
      <description>The lower boundary of the safe range of azimuth
       for collisionable antennas
      </description>
      <units>deg</units>
    </MonitorPoint>

    <MonitorPoint name="safeElHigh" type="float" priority="vital">
      <shortName>Safe El High</shortName>
      <longName>Safe El High Boundary</longName>
      <description>The upper boundary of the safe range of azimuth
       for collisionable antennas
      </description>
      <units>deg</units>
    </MonitorPoint>

    <MonitorPoint name="mode" type="enum">
        <shortName>Drive Mode</shortName>
        <longName>Drive Control Mode</longName>
        <description> Commanded mode of drive system </description>
        <enum name="AZEL">
         <description>
            Horizon coordinate system (azimuth and elevation) tracking.
            On the OVRO antennas this is an active mode, continuously
            tracking the requested azimuth and elevation.
        </description>
        </enum>
        <enum name="EQUAT">
         <description>
            Equatorial coordinate system (ra/dec) tracking.
         </description>
        </enum>
        <enum name="STOW">
         <description>
            Go to the stow position.
            On the OVRO antennas this is a passive mode once the stow
            position has been attained,
            with the brakes on and the drive controllers off.
        </description>
        </enum>
        <enum name="SNOW">
         <description>Minimize snow buildup on antennas</description>
        </enum>
        <enum name="STOP" >
         <description>
            Stopped. On the OVRO antennas this is a passive mode,
            with the brakes on and the drive controllers off.
         </description>
        </enum>
        <enum name="TEST" >
            <description>
                Drive system is in testing mode for engineering purposes.
                This may be because of an open servo loop or becaues the
                drive module has been placed in engineering mode.
            </description>
        </enum>
        <errHi>TEST</errHi>
    </MonitorPoint>

    <MonitorPoint name="driveSeqNum" type="int" persistent="true">
      <shortName>Drive Seq Num</shortName>
      <longName>Drive command sequence number</longName>
      <description>
        Sequence number of the last completed drive command.
      </description>
    </MonitorPoint>

    <MonitorPoint name="driveSeqNumSuccess" type="bool">
        <shortName>Drive Seq Num Success</shortName>
        <longName>Drive sequence number success</longName>
        <description>
            Indicates the success of failure of the command associated with
            the current sequence number.
        </description>
        <errHi>false</errHi>
    </MonitorPoint>

     <Container name="Track" >
        <MonitorPoint name="requestedAzimuth" type="double">
            <shortName>Req Az</shortName>
            <longName>RequestedAzimuth</longName>
            <description>
                Requested azimuth; north=0.  This is the total requested
                azimuth, including offsets.
            </description>
            <precision>4</precision>
            <width>8</width>
            <units>deg</units>
        </MonitorPoint>
        <MonitorPoint name="actualAzimuth" type="double">
            <shortName>ActAz</shortName>
            <longName>Actual azimuth</longName>
            <description> Actual azimuth; north=0 </description>
            <precision>4</precision>
            <width>8</width>
            <units>deg</units>
        </MonitorPoint>
        <MonitorPoint name="errorAzimuth" type="float">
            <shortName>Az Err</shortName>
            <longName>ErrorAzimuth</longName>
            <description>
                Error between the actual and requested azimuth;
                coordinate, not arc
            </description>
            <precision>1</precision>
            <units>asec</units>
        </MonitorPoint>
        <MonitorPoint name="errorAzimuthSky" type="float">
            <shortName>AzSkyErr</shortName>
            <longName>ErrorAzimuthSky</longName>
            <description>
                Error between the actual and requested azimuth;
                arc on the sky, not encoder.
                The warning limits are the same independent of
                antenna type - this needs to be fixed.
            </description>
            <precision>1</precision>
            <units>asec</units>
            <warnHi>2.0</warnHi>
            <warnLo>-2.0</warnLo>
        </MonitorPoint>
        <MonitorPoint name="azimuthRate" type="float">
            <shortName>Az Rate</shortName>
            <longName>AzimuthRate</longName>
            <description>
                Azimuth rate (on the encoder, not sky)
            </description>
            <precision>2</precision>
            <units>deg/min</units>
        </MonitorPoint>

        <MonitorPoint name="requestedElevation" type="double">
            <shortName>Req El</shortName>
            <longName>RequestedElevation</longName>
            <description>
                Requested elevation; horizon=0.  This is the total requested
                elevation, including offsets.
            </description>
            <precision>4</precision>
            <width>7</width>
            <units>deg</units>
        </MonitorPoint>
        <MonitorPoint name="actualElevation" type="double">
            <shortName>Act El</shortName>
            <longName>Actual elevation</longName>
            <description> Actual elevation; horizon=0 </description>
            <precision>4</precision>
            <width>7</width>
            <units>deg</units>
        </MonitorPoint>
        <MonitorPoint name="errorElevation" type="float">
            <shortName>El Err</shortName>
            <longName>ErrorElevation</longName>
            <description>
                Error between the requested and actual elevation
            </description>
            <precision>1</precision>
            <units>asec</units>
            <warnHi>2.0</warnHi>
            <warnLo>-2.0</warnLo>
        </MonitorPoint>
        <MonitorPoint name="elevationRate" type="float">
            <shortName>El Rate</shortName>
            <longName>ElevationRate</longName>
            <description>
                Elevation rate
            </description>
            <precision>2</precision>
            <units>deg/min</units>
        </MonitorPoint>

        <MonitorPoint name="wrapLogic" type="enum">
          <shortName>Wrap Logic</shortName>
          <longName>Wrap Logic</longName>
          <description>
            The azimuth drive can operate over more than a full circle,
                and the wrap logic dictates how the ambiguities are resolved.
            Direction are defined as viewed from above.
          </description>
          <enum name="ZERO">
           <description>
             Do not modify target position (no turns added).
           </description>
          </enum>
          <enum name="ADD">
           <description>
            Add a turn to the target position (in AZ).
           </description>
          </enum>
          <enum name="SUB">
           <description>
            Subtract a turn to the target position (in AZ).
           </description>
          </enum>
        </MonitorPoint>

        <MonitorPoint name="emergencyOff" type="enum">
            <shortName>Emerg Off</shortName>
            <longName>EmergencyOff</longName>
            <description>
              Drive power disrupted by one of the emergency switches.
            </description>
            <enum name="OK">
             <description>Drive not disabled</description>
            </enum>
            <enum name="OFF">
             <description>
                Drives disabled by emergency cut off switch somewhere on antenna.
             </description>
            </enum>
            <errHi>OFF</errHi>
         </MonitorPoint>

         <MonitorPoint name="manualSwitch" type="enum">
            <shortName>Manual Switch</shortName>
            <longName>Manual/Computer Control Switch</longName>
            <description>
                Drive controllers disabled by the computer/manual switch in
                control box on the base of the antenna.
            </description>
            <enum name="OK">
             <description>Drive not disabled</description>
            </enum>
            <enum name="MANUAL">
             <description>
                Drives disabled by computer/manual switch in mount base
             </description>
            </enum>
            <errHi>MANUAL</errHi>
        </MonitorPoint>

      <MonitorPoint name="trackTolerance" type="float">
          <shortName>Trk Tol</shortName>
          <longName>TrackingTolerance</longName>
          <description>
              Tolerance for determining whether antenna mode is
              TRACK/CLOSE/SLEW.
          </description>
          <precision>1</precision>
          <units>arcsec</units>
      </MonitorPoint>
      
    <MonitorPoint name="azimuthAxisState" type="enum">
      <shortName>Az Drive State</shortName>
      <longName>Az Drive State</longName>
      <description>
        Drive system azimuth axis state.
        Uses azimuth sky error and trackTolerance to assign states 
        of TRACK/CLOSE/SLEW.
        These states are not used for blanking or flagging, but as an
        indicator of the independent state of each axis. 
      </description>
      <enum name="TRACK">
       <description>
        The azimuth sky error is less than or equal to trackTolerance/2.
       </description>
      </enum>
      <enum name="CLOSE">
       <description>
        The az sky error is greater than trackTolerance/2 and 
        less than or equal to trackTolerance.
       </description>
      </enum>
      <enum name="SLEW">
       <description>
        The az sky error is greater than trackTolerance.
       </description>
      </enum>
      <enum name="IRRELEVANT">
       <description>
         The tracking error is irrelevant, which includes whenever the
         drives state is STOW, STOP, DISABLE, ERROR, SERVICE, TEST, FATAL,
         or LOCAL.
       </description>
      </enum>
      <warnHi>CLOSE</warnHi>
      <errHi>SLEW</errHi>
    </MonitorPoint>
      
    <MonitorPoint name="elevationAxisState" type="enum">
      <shortName>El Drive State</shortName>
      <longName>El Drive State</longName>
      <description>
        Drive system elevation axis state
        Uses elevation sky error and trackTolerance to assign states 
        of TRACK/CLOSE/SLEW.
        These states are not used for blanking or flagging, but as an
        indicator of the independent state of each axis. 
     </description>
      <enum name="TRACK">
       <description>
        The el error is less than or equal to trackTolerance/2.
       </description>
      </enum>
      <enum name="CLOSE">
       <description>
        The el error is greater than trackTolerance/2 and 
        less than or equal to trackTolerance.
       </description>
      </enum>
      <enum name="SLEW">
       <description>
        The el error is greater than trackTolerance.
       </description>
      </enum>
      <enum name="IRRELEVANT">
       <description>
         When the tracking error is irrelevant, which includes whenever the
         drives state is STOW, STOP, DISABLE, ERROR, SERVICE, TEST, FATAL,
         or LOCAL.
       </description>
      </enum>
      <warnHi>CLOSE</warnHi>
      <errHi>SLEW</errHi>
    </MonitorPoint>
      
    </Container> <!-- AntennaCommon.Drive.Track -->

    <Container name="Point" >
        <MonitorPoint name="offsetAz" type="double">
          <shortName>Off Az</shortName>
          <longName>Azimuth pointing offset</longName>
          <description>Azimuth pointing offset as an arc, not a coordinate offset</description>
          <precision>2</precision>
          <units>arcmin</units>
        </MonitorPoint>

        <MonitorPoint name="offsetEl" type="double">
          <shortName>Off El</shortName>
          <longName>Elevation pointing offset</longName>
          <description>Elevation pointing offset in arcmin</description>
          <precision>2</precision>
          <units>arcmin</units>
        </MonitorPoint>


        <MonitorPoint name="mountOffsetAz" type="double">
          <shortName>Mount Off Az</shortName>
          <longName>Azimuth pointing offset</longName>
          <description>Azimuth pointing offset as an arc, not a coordinate offset</description>
          <precision>2</precision>
          <units>arcmin</units>
        </MonitorPoint>

        <MonitorPoint name="mountOffsetEl" type="double">
          <shortName>Mount Off El</shortName>
          <longName>Elevation pointing offset</longName>
          <description>Elevation pointing offset in arcmin</description>
          <precision>2</precision>
          <units>arcmin</units>
        </MonitorPoint>

        <MonitorPoint name="refraction" type="float">
          <shortName>Refrac</shortName>
          <longName>Refraction</longName>
          <description>Refraction pointing correction</description>
          <precision>2</precision>
          <units>arcmin</units>
        </MonitorPoint>

        <MonitorPoint name="refractionModel" type="enum">
          <shortName>Refrac Model</shortName>
          <longName>Refraction Model</longName>
          <description>Refraction Model</description>
          <enum name="OPTICAL"/>
          <enum name="RADIO"/>
        </MonitorPoint>

        <MonitorPoint name="magnitude" type="float">
            <shortName>Tilt Mag</shortName>
            <longName>Tilt Magnitude</longName>
            <description> Inclination of the azimuth axis from vertical </description>
            <precision>2</precision>
            <units>arcmin</units>
        </MonitorPoint>

        <MonitorPoint name="direction" type="float">
            <shortName>Tilt Dir</shortName>
            <longName>Tilt Direction</longName>
            <description> Direction of inclination of the azimuth axis from vertical, 0=north </description>
            <precision>0</precision>
            <units>deg</units>
        </MonitorPoint>

      <Container name="Constants">

        <MonitorPoint name="coefChange" type="absTime">
          <shortName>Coef Change</shortName>
          <longName>Last Pointing Coefficient Change</longName>
          <description>
              Last time that pointing coefficients were changed for
              this antenna
          </description>
          <units>absTime</units>
        </MonitorPoint>

        <MonitorPoint name="selectedApert" type="enum">
          <shortName>Selected Apert</shortName>
          <longName>Selected Aperture</longName>
          <description>
            The aperture currently selected, implies pointing coefs
            (collimation/sag terms) are being summed with the existing
            pointing model coefs
          </description>
          <enum name="OPTICAL"/>   <!-- 0 -->
          <enum name="RADIO1MM"/>  <!-- 1 -->
          <enum name="RADIO3MM"/>  <!-- 2 -->
          <enum name="RADIO1CM"/>  <!-- 3 -->
        </MonitorPoint>

        <Container name="ApertureCoefficients" count="4">


            <MonitorPoint name="crossElCollErr" type="double">
                <shortName>Cross El Err</shortName>
                <longName>Cross Elevation Collimation Error</longName>
                <description>
                    Aperture pointing constant: cross elevation (orthogonal
                    to elevation axis) collimation error.
                </description>
                <precision>2</precision>
                <units>arcmin</units>
            </MonitorPoint>

            <MonitorPoint name="elCollErr" type="double">
                <shortName>El Err</shortName>
                <longName>Elevation Collimation Error</longName>
                <description>
                    Aperture pointing constant: elevation collimation error.
                </description>
                <precision>2</precision>
                <units>arcmin</units>
            </MonitorPoint>

            <MonitorPoint name="sag" type="double">
                <shortName>Sag</shortName>
                <longName>Sag</longName>
                <description>
                    Radio beam pointing constant: sag, deltaEl=sag*cos(el)
                </description>
                <precision>2</precision>
                <units>arcmin</units>
            </MonitorPoint>

        </Container>
        <!-- AntennaCommon.Drive.Point.aperturePointingCoefficients -->

      </Container> <!-- AntennaCommon.Drive.Point.Constants -->

    </Container> <!-- AntennaCommon.Drive.Point -->

        <Container name="Limit" >
            <description>
                Hardware and software limit conditions
            </description>
            <MonitorPoint name="azSwLimit" type="enum">
                <shortName>Az Sw Limit</shortName>
                <longName>Azimuth Software Limit</longName>
                <description>Azimuth software limits</description>
                <enum name="OK">
                 <description>No limits</description>
                </enum>
                <enum name="PLUSLIM">
                 <description>
                    Software azimuth limit exceeded in + direction
                 </description>
                </enum>
                <enum name="MINUSLIM">
                 <description>
                    Software azimuth limit exceeded in - direction
                 </description>
                </enum>
                 <errHi>PLUSLIM</errHi>
                 <errHi>MINUSLIM</errHi>
            </MonitorPoint>
            <MonitorPoint name="elSwLimit" type="enum">
                <shortName>El Sw Limit</shortName>
                <longName>ElevationSoftwareLimit</longName>
                <description>Elevation software limits</description>
                <enum name="OK">
                 <description>No limits</description>
                </enum>
                <enum name="PLUSLIM">
                 <description>Software elevation limit exceeded in + direction</description>
                </enum>
                <enum name="MINUSLIM">
                 <description>Software elevation limit exceeded in - direction</description>
                </enum>
                <errHi>PLUSLIM</errHi>
                <errHi>MINUSLIM</errHi>
            </MonitorPoint>
            <MonitorPoint name="azHwLimit" type="enum">
                <shortName>Az HW Limit</shortName>
                <longName>Azimuth Hardware Limit</longName>
                <description>Azimuth hardware limits</description>
                <enum name="OK">
                 <description>No limits</description>
                </enum>
                <enum name="PLUSLIM">
                 <description>
                    Hardware azimuth limit exceeded in + direction
                 </description>
                </enum>
                <enum name="MINUSLIM">
                 <description>
                    Hardware azimuth limit exceeded in - direction
                 </description>
                </enum>
                <errHi>PLUSLIM</errHi>
                <errHi>MINUSLIM</errHi>
            </MonitorPoint>
            <MonitorPoint name="elHwLimit" type="enum">
                <shortName>El HW Limit</shortName>
                <longName>Elevation Hardware Limit</longName>
                <description>Elevation hardware limits</description>
                <enum name="OK">
                 <description>No limits</description>
                </enum>
                <enum name="PLUSLIM">
                 <description>Hardware elevation limit exceeded in + direction</description>
                </enum>
                <enum name="MINUSLIM">
                 <description>Hardware elevation limit exceeded in - direction</description>
                </enum>
                <errHi>PLUSLIM</errHi>
                <errHi>MINUSLIM</errHi>
            </MonitorPoint>

            <MonitorPoint name="azLowSwLimitVal" type="float"
                      persistent="true" priority="dontarchive">
                <shortName>Az Low Sw Limit Val</shortName>
                <longName>Azimuth Low Software Limit Value</longName>
                <description>Azimuth software low limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>
            <MonitorPoint name="azHighSwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>Az High Sw Limit Val</shortName>
                <longName>Azimuth High Software Limit Value</longName>
