            </MonitorPoint>
            <MonitorPoint name="azLowHwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>Az Low HW Limit Val</shortName>
                <longName>Azimuth Low Hardware Limit Value</longName>
                <description>Azimuth hardware low limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>
            <MonitorPoint name="azHighHwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>Az High HW Limit Val</shortName>
                <longName>Azimuth High Hardware Limit Value</longName>
                <description>Azimuth hardware high limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>

            <MonitorPoint name="elLowSwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>El Low Sw Limit Val</shortName>
                <longName>Elevation Software Limit Value</longName>
                <description>Elevation software low limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>
            <MonitorPoint name="elHighSwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>ElHighSwLimitVal</shortName>
                <longName>Elevation High Software Limit Value</longName>
                <description>Elevation software high limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>
            <MonitorPoint name="elLowHwLimitVal" type="float"
                          persistent="true" priority="dontarchive">
                <shortName>El Low HW Limit Val</shortName>
                <longName>Elevation Low Hardware Limit Value</longName>
                <description>Elevation hardware low limit</description>
                <precision>1</precision>
                <units>deg</units>
            </MonitorPoint>
            <MonitorPoint name="elHighHwLimitVal" type="float"
