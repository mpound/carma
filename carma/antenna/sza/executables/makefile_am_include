#######################################################################
# List of all programs
#######################################################################

antenna_sza_bins = bin/szaAntennaControl bin/szaMpmlGenerator bin/szaTestRemoteSensors bin/tRrdCollector bin/systemStatus
bin_PROGRAMS   += $(antenna_sza_bins)

#######################################################################
# Generic defines for all SZA executables
#######################################################################

antenna_sza_bins_ldadd = \
	$(lib_libcarmaSzaArrayutils_la) \
	$(lib_libcarmaSzaUtil_la) \
	$(lib_libcarmaSzaSlalib_la) \
	$(lib_libcarmaSzaCfitsio_la) \
	$(lib_libcarmaSzaAntennaCanbus_la) \
	$(lib_libcarmaSzaAntennaControl_la) \
	$(lib_libcarmaSzaAntennaCorba_la) \
	$(antenna_common_la) \
	$(antenna_sza_la) \
	$(dbms_la) \
	$(monitor_la) \
	$(services_la) \
	$(environment_la) \
	$(correlator_la) \
	$(pipeline_la) \
	$(util_la) \
	-llog4cpp \
	-ljanz \
	-lmir \
	-lmysqlclient \
	-lodbc \
	-lxerces-c \
	-lnovas \
	-lgslcblas \
	-lgsl \
	-lunits \
	-lfftw3 \
	-lACE \
	-lTAO \
	-lTAO_AnyTypeCode \
